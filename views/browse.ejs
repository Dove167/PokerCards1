<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>PokerJS — Browse</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>PokerJS — Browse Cards</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/practice">Practice</a>
      <a href="/random-lesson">Random Lesson</a>
      <a href="/browse" class="active">Browse</a>
      <a href="/progress">Progress</a>
    </nav>
  </header>

  <main>
    <section class="grid">
      <% cards.forEach(c => { %>
        <article class="card-tile">
          <h3><%= c.card %></h3>
          <div class="concept"><%= c.concept %></div>
          <div class="actions-row">
            <% if (c.lessonPath) { %>
              <a class="btn" href="/card/<%= (c.lessonPath.split('/').pop() || '').replace('.md','') %>">Open Lesson</a>
            <% } else { %>
              <a class="btn" href="/card/<%= (c.card || '').toLowerCase().replace(/\s+/g,'-').replace(/[^a-z0-9\-]/g,'') %>">Open Lesson</a>
            <% } %>
          </div>
        </article>
      <% }) %>
    </section>
  </main>
</body>
</html>