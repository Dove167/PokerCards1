<body>
  <header>
    <h1>PokerJS</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/practice">Practice</a>
      <a href="/random-lesson">Random Lesson</a>
      <a href="/browse">Browse</a>
      <a href="/progress">Progress</a>
    </nav>
  </header>

  <main>
    <section class="stats">
      <h2>Progress</h2>
      <ul>
        <li>Seen: <strong><%= stats.seen %></strong> / <%= stats.totalCards %></li>
        <li>Streak: <strong><%= stats.streak %></strong> (Best <%= stats.best %>)</li>
        <li>Accuracy: <strong><%= stats.acc %></strong>% (<%= stats.correct %>/<%= stats.total %>)</li>
      </ul>
    </section>

    <section class="actions">
      <a class="btn" href="/practice">Start Practice</a>
      <a class="btn" href="/random-lesson">Open Random Lesson</a>
      <a class="btn" href="/browse">Browse All Cards</a>
    </section>
  </main>
</body>
</html>